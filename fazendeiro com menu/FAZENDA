    cout << setw(105) << "______________________||____________________" << endl;
    cout << setw(73) << "\\   REPOLHO" << setw(32) << "/" << endl;
    cout << setw(64) << "\\" << setw(40) << "/" << endl;
    cout << setw(65) << "\\" << setw(38) << "/" << endl;
    cout << setw(102) << "-------------------------------------" << endl;

    
}
