#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
#include <locale.h>

int main ()
{
setlocale(LC_ALL,"Portuguese");
float num1,num2,soma1,soma2,soma3,soma4;
printf("Digite um numero: ");
scanf("%f",&num1);
printf("Digite um numero:");
scanf("%f",&num2);
soma1 = num1 + num2;
soma2 = num1 - num2;
soma3 = num1 * num2;
soma4 = num1 / num2;
printf("A soma dos números é: %2.f \n",soma1);
printf("A subtraçao dos numeros é: %.2f \n",soma2);
printf("A multiplicacao dos numeros é: %.2f \n",soma3);
printf("A divisao dos numeros é: %.2f \n",soma4);
